<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.masai.chatwithme">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/chaticon"
        android:label="@string/app_name"
        android:roundIcon="@drawable/chaticon"
        android:supportsRtl="true"
        android:theme="@style/Theme.ChatWithMe">
        <activity android:name=".Activity.Settings" android:screenOrientation="portrait"/>
        <activity android:name=".Activity.ChatActivity" android:screenOrientation="portrait"/>
        <activity android:name=".Activity.Home" android:screenOrientation="portrait"/>
        <activity android:name=".Activity.Registration"  android:screenOrientation="portrait"/>
        <activity android:name=".Activity.LoginScreen"  android:screenOrientation="portrait"/>
        <activity android:name=".Activity.SplashScreen"  android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>